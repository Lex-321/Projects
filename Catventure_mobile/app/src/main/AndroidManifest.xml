<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:networkSecurityConfig="@xml/network_security_config"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/background_blue"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:screenOrientation="landscape"
        android:supportsRtl="true"
        android:theme="@style/Theme.Catventure"
        tools:ignore="DiscouragedApi"
        tools:targetApi="31">
        <activity
            android:name=".levels.BaseLevelActivity"
            android:exported="false"
            android:screenOrientation="landscape" />
        <activity
            android:name=".levels.Level3Activity"
            android:exported="false"
            android:screenOrientation="landscape" />
        <activity
            android:name=".levels.Level2Activity"
            android:exported="false"
            android:screenOrientation="landscape" />
        <activity
            android:name=".LevelCompletedActivity"
            android:exported="false"
            android:screenOrientation="landscape" />
        <activity
            android:name=".levels.Level1Activity"
            android:exported="false"
            android:screenOrientation="landscape" />
        <activity
            android:name=".GameOverActivity"
            android:exported="false"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".Game_Screen"
            android:exported="false"
            android:screenOrientation="landscape" />
        <activity
            android:name=".CreateSave"
            android:exported="false"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Credits"
            android:exported="false"
            android:screenOrientation="landscape"
            tools:ignore="DiscouragedApi" />
        <activity
            android:name=".LoadGame"
            android:exported="false"
            android:screenOrientation="landscape" />
        <activity
            android:name=".StartGame"
            android:exported="false"
            android:screenOrientation="landscape" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>